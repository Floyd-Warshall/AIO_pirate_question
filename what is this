#include <iostream>

using namespace std;

int main()
{
    int L; 
    int X;
    int Y;
    cin >> L >> X >> Y;
    int dist = 0
    if ( X + Y > L){
    dist = L*2 - X - Y;
    } else if ( X + Y == L){
    dist = L;
    } else if (X + Y < L){
        dist = X + Y;  
    }
    
    cout << dist;
    

    return 0;
}
